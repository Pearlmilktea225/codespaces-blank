-- [3. 邏輯壓縮引擎 (The Pattern Matcher)]
-- 這裡的一行代碼等於 10000 行翻譯
-- 例如: "Level: 123" 會自動變成 "等級: 123"
local Patterns = {
    ["Level"] = "等級", ["Beli"] = "貝里", ["Fragments"] = "碎片",
    ["Health"] = "血量", ["Energy"] = "體力", ["Damage"] = "傷害",
    ["Ping"] = "延遲", ["FPS"] = "幀數", ["Bounty"] = "賞金", ["Honor"] = "榮譽",
    ["Mastery"] = "精通", ["Distance"] = "距離", ["Time"] = "時間",
    ["Cooldown"] = "冷卻", ["Price"] = "價格", ["Stocks"] = "庫存",
    ["Current"] = "當前", ["Next"] = "下一個", ["Required"] = "需要",
    ["Spawned"] = "已生成", ["Despawned"] = "已消失",
    ["Skill Z"] = "技能 Z", ["Skill X"] = "技能 X",
    ["Skill C"] = "技能 C", ["Skill V"] = "技能 V", ["Skill F"] = "技能 F",
    ["Transformation"] = "變身", ["Flying"] = "飛行"
}

-- [4. 強制覆蓋引擎 (Overdrive Engine)]
local CoreGui = game:GetService("CoreGui")
local Players = game:GetService("Players")

local function TranslateObject(object)
    if not object then return end
    
    -- 針對所有可能的文字屬性進行掃描 (包括輸入框提示和工具提示)
    local props = {"Text", "PlaceholderText", "ToolTip"}
    
    for _, prop in pairs(props) do
        if pcall(function() return object[prop] end) and object[prop] and object[prop] ~= "" then
            local originalText = object[prop]
            local newText = originalText
            local changed = false
            
            -- 1. 靜態全詞匹配 (優先級最高)
            if Dictionary[originalText] then
                object[prop] = Dictionary[originalText]
                return
            end
            
            -- 2. 正則模式匹配 (處理數字)
            for eng, chn in pairs(Patterns) do
                if string.find(newText, eng) then
                    newText = string.gsub(newText, eng, chn)
                    changed = true
                end
            end
            
            -- 3. 侵略性模糊匹配 (如果不匹配模式，則嘗試拆詞)
            if not changed then
                for eng, chn in pairs(Dictionary) do
                    -- 限制長度大於 4 以免誤殺 (例如 "in" 變成 "在")
                    if #eng >= 4 and string.find(newText, eng) then
                        newText = string.gsub(newText, eng, chn)
                        changed = true
                    end
                end
            end
            
            if changed then object[prop] = newText end
        end
    end
end

-- [5. 暴力循環 (Infinite Loop)]
task.spawn(function()
    game.StarterGui:SetCore("SendNotification", {
        Title = "SYSTEM: APEX",
        Text = "阿卡西記錄已啟動 (全覆蓋漢化)",
        Duration = 5
    })
    
    while true do
        -- 0.2 秒掃描一次，極限速度
        task.wait(0.2)
        
        pcall(function()
            -- 掃描 CoreGui
            for _, gui in pairs(CoreGui:GetChildren()) do
                if gui:IsA("ScreenGui") and gui.Name ~= "RobloxGui" and gui.Name ~= "TopBar" then
                    for _, v in pairs(gui:GetDescendants()) do
                        TranslateObject(v)
                    end
                end
            end
            
            -- 掃描 PlayerGui
            if Players.LocalPlayer and Players.LocalPlayer:FindFirstChild("PlayerGui") then
                for _, gui in pairs(Players.LocalPlayer.PlayerGui:GetChildren()) do
                    for _, v in pairs(gui:GetDescendants()) do
                        TranslateObject(v)
                    end
                end
            end
        end)
    end
end)
